// language: kotlin 

import kotlinx.coroutines.Deferred

import com.kapsch.android.api.models.ProviderAuthenticationInformation 
import com.kapsch.android.api.models.UpdateProviderInformation 
import com.kapsch.android.api.models.Account 
import com.kapsch.android.api.models.PaymentMethods 

import retrofit2.http.PATH 
import retrofit2.http.GET 
import retrofit2.http.BODY 
import retrofit2.http.POST 

interface AccountApi {
    
    @GET("accounts")
    fun getAccount(): Deferred<Account>
    
    @GET("accounts/{account_id}/payments")
    fun getPaymentMethods(@Path("account_id") account_id: String): Deferred<PaymentMethods>
    
    @POST("users/provider_login")
    fun postProviderAuthenticationInformation(@Body updateProviderInformation: UpdateProviderInformation): Deferred<ProviderAuthenticationInformation>
    
}